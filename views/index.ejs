<%- include('partials/header') %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all around the world</p>
			<p>
				<a class="btn btn-primary btn-large" href="/Campgrounds/new">Add New Campground.</a>
			</p>	
		</div>
	</header>

	<!-- <div class="row">
		<div class="col-lg-12">
			<h3>Our Most Popular Campgrounds</h3>
		</div>
	</div>	 -->

	<div class="row" style="display: flex; flex-wrap: wrap;">
		<% camps.forEach(function(camp){ %>
		<div class="col-md-3 col-sm-6">
			<div class="card text-center" style="margin-bottom: 15px">
				<img src="<%=camp.image%>" class="img-thumbnail" style="border: none; height:300px;">
				<h4><%= camp.name%></h4>
				<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
			</div>
			
		</div>
		<% }); %>
	</div>

</div>

<%- include('partials/footer') %>